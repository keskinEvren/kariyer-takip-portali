@model KariyerTakip.Models.InternshipForm

@{
    ViewData["Title"] = "Details";
    var selam = Model.ApplicationFormURL;
}



<div class="row">
    <!-- Left side: dl, dt, dd -->
    <div class="col-md-6">
        <h4>InternshipForm</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Company)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Company)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Industry)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Industry)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.DurationInDays)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.DurationInDays)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.WebURLOfCompany)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.WebURLOfCompany)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.EmailOfCompany)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EmailOfCompany)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.DoesCompanyWorkOnSaturday)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.DoesCompanyWorkOnSaturday)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.MentorFullname)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.MentorFullname)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.MentorTitle)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.MentorTitle)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.IsApproved)
            </dt>
            <dd class="col-sm-7">
                <select id="isApprovedDropdown" class="form-control">
                    <option value="true">Approved</option>
                    <option value="false">Not Approved</option>
                </select>
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.IsSucessfullyFinished)
            </dt>
            <dd class="col-sm-7">
                <select id="isSuccessfullyFinishedDropdown" class="form-control">
                    <option value="true">Approved</option>
                    <option value="false">Not Approved</option>
                </select>
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-7">
                <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Details" asp-route-id="@Model.UserId">@Model.User.FirstName @Model.User.LastName</a>
            </dd>
        </dl>
    </div>


    @if (
    Model.ApplicationFormURL is not null &&
    Model.InternshipAcceptanceFormURL is not null &&
    Model.IdentificationCardURL is not null &&
    Model.ResidenceCertificateURL is not null &&
    Model.CriminalRecordCertificateURL is not null &&
    Model.SgkEligibilityCertificateURL is not null &&
    Model.WorkAccidentAndOccupationalDiseaseInsuranceFormURL is not null &&
    Model.IsApproved == true)
    {
    <div class="col-md-6">
        <h4>Documents</h4>
        <hr/>
        <div class="d-flex flex-column">
            @if (!string.IsNullOrEmpty(Model.ApplicationFormURL))
            {
            <div class="modal fade" id="applicationFormPDF" tabindex="-1" aria-labelledby="applicationFormPDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="applicationFormPDF">Başvuru Formu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.ApplicationFormURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#applicationFormPDF">
                Başvuru Formu PDF
            </button>
            }

            @if (!string.IsNullOrEmpty(Model.InternshipAcceptanceFormURL))
            {
            <div class="modal fade" id="InternshipAcceptanceFormPDF" tabindex="-1" aria-labelledby="InternshipAcceptanceFormPDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="InternshipAcceptanceFormPDF">Staj Kabul Formu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.InternshipAcceptanceFormURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#InternshipAcceptanceFormPDF">
                Staj Kabul Formu PDF
            </button>
            }

            @if (!string.IsNullOrEmpty(Model.IdentificationCardURL))
            {
            <div class="modal fade" id="IdentificationCardPDF" tabindex="-1" aria-labelledby="IdentificationCardPDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="IdentificationCardPDF">Kimlik Fotokopisi</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.IdentificationCardURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#IdentificationCardPDF">
                Kimlik Fotokopisi PDF
            </button>
            }

            @if (!string.IsNullOrEmpty(Model.ResidenceCertificateURL))
            {
            <div class="modal fade" id="ResidenceCertificatePDF" tabindex="-1" aria-labelledby="ResidenceCertificatePDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ResidenceCertificatePDF">İkametgah Belgesi</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.ResidenceCertificateURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#ResidenceCertificatePDF">
                İkametgah Belgesi PDF
            </button>
            }

            @if (!string.IsNullOrEmpty(Model.SgkEligibilityCertificateURL))
            {
            <div class="modal fade" id="SgkEligibilityCertificatePDF" tabindex="-1" aria-labelledby="SgkEligibilityCertificatePDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="SgkEligibilityCertificatePDF">SGK Müstehaklık Belgesi</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.SgkEligibilityCertificateURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#SgkEligibilityCertificatePDF">
                SGK Müstehaklık Belgesi PDF
            </button>
            }
            @if (!string.IsNullOrEmpty(Model.CriminalRecordCertificateURL))
            {
            <div class="modal fade" id="CriminalRecordCertificatePDF" tabindex="-1" aria-labelledby="CriminalRecordCertificatePDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="CriminalRecordCertificatePDF">Sabıka Kaydı</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.CriminalRecordCertificateURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#CriminalRecordCertificatePDF">
                Sabıka Kaydı PDF
            </button>
            }

            @if (!string.IsNullOrEmpty(Model.WorkAccidentAndOccupationalDiseaseInsuranceFormURL))
            {
            <div class="modal fade" id="WorkAccidentAndOccupationalDiseaseInsuranceFormPDF" tabindex="-1" aria-labelledby="WorkAccidentAndOccupationalDiseaseInsuranceFormPDF" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="WorkAccidentAndOccupationalDiseaseInsuranceFormPDF">İş Kazası ve Meslek Hastalıkları Sigorta Formu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Url.Content(Model.WorkAccidentAndOccupationalDiseaseInsuranceFormURL)" frameborder="0" style="width: 100%; height: 500px;"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#WorkAccidentAndOccupationalDiseaseInsuranceFormPDF">
                İş Kazası ve Meslek Hastalıkları Sigorta Formu PDF
            </button>
            }
        </div>
    </div>
    }

</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>



